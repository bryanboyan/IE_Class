<h1>Edit Photo</h1>

<form role="form" id="userForm" action="/user/passwd/update" method="post">
	<div class="form-group">
		<label for="oldPasswd">Current Password</label><br>
		<input id="oldPasswd" name="oldPasswd" type="password" required>
	</div>
	
	<div class="form-group">
		<label for="passwd">New Password</label><br>
		<input id="passwd" name="passwd" type="password" required onchange="form.pwcmp.pattern=this.value">
	</div>

	<div class="form-group">
		<label for="pwcmp">Confirm Password</label><br>
		<input id="pwcmp" name="pwcmp" type="password" 
			oninvalid="this.setCustomValidity('Please input the same password')" required>
	</div>
	
	<button type="submit" class="btn btn-primary">Submit</button>
	<a href="/user/my" class="btn btn-default">Cancel</a>
</form>